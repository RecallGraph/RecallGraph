{
  "name": "recallgraph",
  "version": "1.0.0",
  "description": "A versioning data store for time-variant graph data",
  "private": true,
  "repository": {
    "type": "git",
    "url": "https://github.com/RecallGraph/RecallGraph"
  },
  "main": "main.js",
  "directories": {
    "test": "test"
  },
  "scripts": {
    "setup": "grunt initialize",
    "clean": "grunt clean",
